<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/Widget.App.MaterialCardView</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="preferenceTheme">@style/AppTheme.Preferences</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextAppearanceActive">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

    <style name="Widget.App.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/blue_silver</item>
    </style>

    <style name="Widget.App.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="titleMarginStart">6dp</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.Preferences" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
        <item name="android:listPreferredItemPaddingStart">8dp</item>
        <item name="android:listPreferredItemPaddingEnd">8dp</item>
    </style>

</resources>
